<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frOriginDetermination_rlContainer"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:background="@color/colorPrimaryDark">

        <LinearLayout
            android:id="@+id/frOriginDetermination_llButtonContainers"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_alignParentTop="true"
            android:background="@drawable/view_rectangle_background_transparent_border_white_no_corners"
            android:gravity="right"
            android:layoutDirection="rtl"
            android:weightSum="2">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <com.noavaran.system.vira.baryab.customviews.CustomTextView
                    android:id="@+id/frOriginDetermination_btnConfirm"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:gravity="center"
                    android:tag="origin"
                    android:text="تایید"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_medium"
                    app:tvCustomFont="@string/baseFont" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/view_rectangle_background_transparent_border_white_no_corners">

                <com.noavaran.system.vira.baryab.customviews.CustomTextView
                    android:id="@+id/frOriginDetermination_btnAddNewPlace"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:gravity="center"
                    android:tag="origin"
                    android:text="تایید و انتخاب محل جدید"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_medium"
                    app:tvCustomFont="@string/baseFont" />

            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/frOriginDetermination_rlShowChosenPlace"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_below="@+id/frOriginDetermination_llButtonContainers">

            <com.noavaran.system.vira.baryab.customviews.CustomTextView
                android:id="@+id/frOriginDetermination_btnShowChosenPlace"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:gravity="center"
                android:text="نمایش محل های انتخاب شده"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_medium"
                app:tvCustomFont="@string/baseFont" />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>