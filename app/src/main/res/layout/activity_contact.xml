<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    tools:context="com.noavaran.system.vira.baryab.activities.ContactActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/acContact_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:background="?attr/colorAccent"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        local:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        local:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.noavaran.system.vira.baryab.customviews.CustomTextView
                android:id="@+id/acContact_btnBack"
                android:layout_width="@dimen/toolbar_icon_view_width"
                android:layout_height="@dimen/toolbar_icon_view_height"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_small"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:clickable="true"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/toolbar_icon_text_size"
                app:tvCustomFont="@string/baseTextIconFont" />

            <com.noavaran.system.vira.baryab.customviews.CustomTextView
                android:id="@+id/acContact_tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/acContact_btnBack"
                android:layout_alignBottom="@+id/acContact_btnBack"
                android:layout_toLeftOf="@+id/acContact_btnBack"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginRight="@dimen/margin_small"
                android:paddingTop="@dimen/_4sdp"
                android:gravity="center|right"
                android:text="تماس با ما"
                android:textColor="@color/white"
                android:textSize="@dimen/toolbar_title_text_size"
                app:tvCustomFont="@string/baseFont" />

        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

    <com.noavaran.system.vira.baryab.customviews.CustomTextView
        android:id="@+id/acContact_icoChairman"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_below="@+id/acContact_toolbar"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_medium"
        android:gravity="center"
        android:text=""
        android:textSize="@dimen/_25sdp"
        android:textColor="@color/blue_500"
        app:tvCustomFont="@string/baseTextIconFont"/>

    <com.noavaran.system.vira.baryab.customviews.CustomTextView
        android:id="@+id/acContact_tvChairman"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/acContact_icoChairman"
        android:layout_alignTop="@+id/acContact_icoChairman"
        android:layout_alignBottom="@+id/acContact_icoChairman"
        android:layout_marginRight="@dimen/margin_small"
        android:gravity="center|right"
        android:text="باریاب نو"
        android:textSize="@dimen/text_size_medium"
        android:textColor="@color/white"
        app:tvCustomFont="@string/baseFont"/>

    <com.noavaran.system.vira.baryab.customviews.CustomTextView
        android:id="@+id/acContact_icoPhoneNumber"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_below="@+id/acContact_icoChairman"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginRight="@dimen/_8sdp"
        android:gravity="center"
        android:text=""
        android:textSize="@dimen/_25sdp"
        android:textColor="@color/blue_500"
        app:tvCustomFont="@string/baseTextIconFont"/>

    <com.noavaran.system.vira.baryab.customviews.CustomTextView
        android:id="@+id/acContact_ivPhoneNumber"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/acContact_icoPhoneNumber"
        android:layout_alignTop="@+id/acContact_icoPhoneNumber"
        android:layout_alignBottom="@+id/acContact_icoPhoneNumber"
        android:layout_marginRight="@dimen/margin_small"
        android:gravity="center|right"
        android:text="09122222222"
        android:textSize="@dimen/text_size_medium"
        android:textColor="@color/white"
        app:tvCustomFont="@string/baseFont"/>

    <com.noavaran.system.vira.baryab.customviews.CustomTextView
        android:id="@+id/acContact_icoAddress"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_below="@+id/acContact_icoPhoneNumber"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginRight="@dimen/margin_medium"
        android:gravity="center"
        android:text=""
        android:textSize="@dimen/_25sdp"
        android:textColor="@color/blue_500"
        app:tvCustomFont="@string/baseTextIconFont"/>

    <com.noavaran.system.vira.baryab.customviews.CustomTextView
        android:id="@+id/acContact_ivAddress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/acContact_icoAddress"
        android:layout_alignTop="@+id/acContact_icoAddress"
        android:layout_alignBottom="@+id/acContact_icoAddress"
        android:layout_marginRight="@dimen/margin_small"
        android:gravity="center|right"
        android:text="تهران ، بلوار پیروزی"
        android:textSize="@dimen/text_size_medium"
        android:textColor="@color/white"
        app:tvCustomFont="@string/baseFont"/>

</RelativeLayout>